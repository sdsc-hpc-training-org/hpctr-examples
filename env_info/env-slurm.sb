#!/bin/bash
#SBATCH --job-name="envinfo"
#SBATCH --output="envinfo.%j.%N.out"
#SBATCH --partition=compute
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --export=ALL
#SBATCH -t 00:1:00
#SBATCH -A use300

## Environment
module purge
module load slurm
module load cpu

##  just perform some basic unix commands

echo "----------------------------------"
echo "hostname= " `hostname` 
echo "date= " `date` 
echo "whoami= " `whoami` 
echo "pwd= " `pwd`
m=`module list` 
echo "module list= $m" 
echo "----------------------------------"
e=`env`
echo "env= $e" 
echo "----------------------------------"

